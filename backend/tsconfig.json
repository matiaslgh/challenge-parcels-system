{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./src/custom-declarations"],
    "types": ["jest", "node"]
  },
  "ts-node": {
    "files": true
  },
  "include": ["src", "integration-tests", "jest.setup.ts"]
}
